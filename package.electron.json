{
  "name": "jade",
  "version": "0.3.4",
  "main": "main.js",
  "license": "MIT",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder build"
  },
  "devDependencies": {
    "electron": "^11.1.1",
    "electron-builder": "^22.9.1"
  },
  "dependencies": {
    "@dragonman225/prosemirror-math": "^0.2.4",
    "@react-spring/web": "^9.2.5",
    "better-sqlite3": "^7.1.2",
    "fuse.js": "^6.4.6",
    "katex": "^0.13.13",
    "normalize.css": "^8.0.1",
    "prosemirror-commands": "^1.1.10",
    "prosemirror-history": "^1.1.3",
    "prosemirror-inputrules": "^1.1.3",
    "prosemirror-keymap": "^1.1.4",
    "prosemirror-model": "^1.13.1",
    "prosemirror-state": "^1.3.3",
    "prosemirror-view": "^1.16.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "sirv": "^1.0.10",
    "sirv-cli": "^1.0.10",
    "slate": "^0.66.5",
    "slate-history": "^0.66.0",
    "slate-react": "^0.66.6",
    "typestyle": "^2.1.0",
    "uuid": "^8.3.2"
  },
  "build": {
    "appId": "com.jade",
    "productName": "Jade",
    "extraResources": [
      {
        "from": "res/512x512.png",
        "to": "512x512.png"
      }
    ],
    "directories": {
      "output": "dist"
    },
    "linux": {
      "target": "AppImage"
    },
    "mac": {
      "target": "dmg",
      "icon": "res/512x512.png"
    },
    "win": {
      "target": "portable"
    }
  }
}
