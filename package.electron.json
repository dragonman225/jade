{
  "name": "jade",
  "version": "0.3.6",
  "main": "main.js",
  "license": "MIT",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder build",
    "dist:win": "electron-builder build -w"
  },
  "devDependencies": {
    "electron": "^11.1.1",
    "electron-builder": "^22.9.1"
  },
  "dependencies": {
    "better-sqlite3": "^7.1.2"
  },
  "build": {
    "appId": "com.jade",
    "productName": "Jade",
    "extraResources": [
      {
        "from": "res/512x512.png",
        "to": "512x512.png"
      }
    ],
    "directories": {
      "output": "dist"
    },
    "linux": {
      "target": "AppImage"
    },
    "mac": {
      "target": "dmg",
      "icon": "res/512x512.png"
    },
    "win": {
      "target": "portable"
    }
  }
}
