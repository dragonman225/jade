{
  "name": "jade",
  "version": "0.1.1",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "postinstall": "npm run electron:rebuild-native",
    "lint": "eslint ./",
    "lint-prof": "cross-env TIMING=1 yarn lint",
    "web:start": "webpack-cli serve --progress --color --mode development --config webpack.config.web.dev.js",
    "web:build": "webpack --color --mode production --config webpack.config.web.prod.js",
    "web:serve": "sirv build/web --dev -H 10.0.0.3",
    "electron:start": "electron ./build/electron/electron-main.js",
    "electron:build": "npm run electron:build-main && npm run electron:build-renderer",
    "electron:build-main": "tsc -p tsconfig.electron.json",
    "electron:build-renderer": "webpack --color --mode production --config webpack.config.electron.js",
    "electron:rebuild-native": "electron-rebuild -f -w better-sqlite3",
    "electron:pack": "electron-builder --dir",
    "electron:dist": "mkdir -p build/electron/res && cp package.electron.json build/electron/package.json && cp assets/icon.png build/electron/res/512x512.png && pushd build/electron && yarn && yarn dist && popd"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-react": "^7.12.10",
    "@babel/preset-typescript": "^7.12.7",
    "@types/prosemirror-history": "^1.0.1",
    "@types/prosemirror-keymap": "^1.0.3",
    "@types/prosemirror-model": "^1.11.1",
    "@types/prosemirror-state": "^1.2.5",
    "@types/prosemirror-view": "^1.16.1",
    "@types/react": "^16.9.51",
    "@types/react-dom": "^16.9.8",
    "@types/styled-jsx": "^2.2.8",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.11.1",
    "@typescript-eslint/parser": "^4.11.1",
    "babel-loader": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^11.1.1",
    "electron-builder": "^22.9.1",
    "electron-rebuild": "^2.3.4",
    "eslint": "^7.16.0",
    "eslint-plugin-react": "^7.22.0",
    "fork-ts-checker-notifier-webpack-plugin": "^3.0.0",
    "fork-ts-checker-webpack-plugin": "^6.0.8",
    "html-webpack-plugin": "next",
    "rimraf": "^3.0.2",
    "tslib": "^2.0.3",
    "typescript": "^4.1.3",
    "webpack": "^5.11.1",
    "webpack-cli": "^4.3.0",
    "webpack-dev-server": "^3.11.1",
    "webpack-node-externals": "^2.5.2"
  },
  "dependencies": {
    "better-sqlite3": "^7.1.2",
    "normalize.css": "^8.0.1",
    "prosemirror-history": "^1.1.3",
    "prosemirror-keymap": "^1.1.4",
    "prosemirror-model": "^1.13.1",
    "prosemirror-schema-basic": "^1.1.2",
    "prosemirror-state": "^1.3.3",
    "prosemirror-view": "^1.16.5",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "sirv": "^1.0.10",
    "sirv-cli": "^1.0.10",
    "slate": "^0.59.0",
    "slate-history": "^0.59.0",
    "slate-react": "^0.59.0",
    "styled-jsx": "^3.3.2",
    "typestyle": "^2.1.0",
    "uuid": "^8.3.2"
  }
}
